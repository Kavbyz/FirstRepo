            </div>
        </div>
        <div class="content">
            <a href="@Url.Action("Index", "Home")" class="button">
                <span>Домашняя страница</span>
            </a>
            <a href="@Url.Action("Contact", "Home")" class="button">
                <span>Контакты</span>
            </a>
            <a href="@Url.Action("PaymentAndDelivery", "Home")" class="button">
                <span>Оплата и Доставка</span>
            </a>
            @Html.ActionLink("Корзина", "Basket", "Baskets", null, new { @class = "button" })
        </div>
        <div>
            @RenderBody()
            <hr />
            <footer></footer>
        </div>

        <footer class="footer_back">
            </br>
